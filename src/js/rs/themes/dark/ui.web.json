{
    "HtmlElement": {
        "styles": {
            "margin"          : "0px",
            "border"          : "none",
            "borderWidth"     : "0px",
            "boxSizing"       : "border-box",
            "-moz-box-sizing" : "border-box",
            "display"         : "block",
            "backgroundImage" : "none",
            "backgroundColor" : "transparent",
            "boxShadow"       : "none",
            "-moz-box-shadow" : "none",
            "isIE:overflow"   : "hidden",
            "top"             : "0px",
            "left"            : "0px"
        },

        "border": null
    },

    "zCanvas": {
        "$"    :  "IT IS IMPORTANT TO HAVE CANVAS CSS PADDING = 0 TO FIX IE9 PROBLEM",
        "stackLayout": 0,

        "styles": {
            "outline"                    : "none",
            "padding"                    : "0px",
            "-webkit-user-select"        : "none",
            "-ms-user-select"            : "none",
            "-moz-user-select"           : "-moz-none",
            "user-select"                : "none",
            "-khtml-user-select"         : "none",
            "-webkit-tap-highlight-color": "rgba(0,0,0,0)",
            "touch-action"               : "none",
            "content-zooming"            : "none",
            "touch-callout"              : "none",
            "user-drag"                  : "none",
            "background"                 : "black",
            "tap-highlight-color"        : "rgba(0,0,0,0)"
        },

        "kids": [
            { "@ * zebkit.ui.web.RootLayer"   : [] },
            { "@ * zebkit.ui.web.WinLayer"    : [] },
            { "@ * zebkit.ui.web.PopupLayer"  : [] }
        ]
    },

    "HtmlButton" : {
        "inheritProperties" : false,
        "styles" : {
            "background" : "transparent",
            "color" : "red",
            "font-weight": "bold"
        },
        "padding" : 6,
        "border" : {
            ".border" : [ "orange", 2, 6 ]
        }
    },

    "HtmlTextInput": {
        "inheritProperties" : true,

        "styles" : {
            "background" : "transparent"
        },

        "border" : {
            "focuson" :  { ".border" : [ "orange", 2 ] },
            "focusoff":  { ".border" : [ "orange", 1 ] }
        },

        "background"    : { ".gradient" : [ "black", "#444444" ]},
        "color"   : "white",
        "style"   : [ "outline", "none"],
        "padding" : [4,4,4,4]
    },

    "HtmlTextField": {
        "inheritProperties" : true
    },

    "HtmlTextArea": {
        "inheritProperties" : true,
        "resizeable"  :  false
    }
}