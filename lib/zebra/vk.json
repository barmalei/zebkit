{
    "HintPan" : {
        "Label" : {
            "font"   : { "$zebra.ui.Font" : [ "Arial", "bold",  28] },
            "color"  : "#2222FF"
        },

        "border"    : { "$zebra.ui.Border": [ "#CCCCCC", 1, 16 ] },
        "padding"   : 12,
        "background": "white",
        "layout"    : { "$zebra.layout.FlowLayout" : [ "center", "top"] }
    },

    "VKey" : {
        "Label" : {
            "color": "white"
        },

        "border" : {
            "out" : { "$zebra.ui.Border": [ "white", 1, 6] },
            "pressed.over" : { "$zebra.ui.Border" : [ "orange", 1, 6] }
        },

        "background" : {
            "out"  :"black",
            "over" :"gray",
            "pressed.over" : "orange"
        }
    },

    "VKeyOption" : {
        "background" : {
            "out" :"#dF4422",
            "over" :"gray",
            "pressed.over" : "orange"
        }
    },

    "VKeys" : {
        "SmallLabel" : {
            "color": "orange"
        },

        "background" : {
            "out" :"gray",
            "over" :"gray",
            "pressed.over" : "orange"
        }
    },

    "VK" : {
        "groups":  {  "latin": [
                                    [ "1!", "2@", "3#", "4$", "5%", "6^", "7&", "8*", "9(", "0)" ],
                                    [ "q", "w", "e", "r", "t",  "y", "u", "i", "o", "p" ],
                                    [ "a", "s", "d", "f", "g", "h", "j", "k", "l"  ],
                                    [ "shift", "z", "x", "c", "v", "b", "n", "m", "backSpace" ],
                                    [ { "vkey": { "$zebra.ui.vk.VKeyOption": ["Lang", [ "rus" ]] }, "size": "ps" }, "/-+=", "space",  ".,:;", "enter" ]
                                ],

                        "rus" : [
                                    [ "1", "2", "3", "4", "5", "6", "7", "8", "9", "0" ],
                                    [ "й", "ц", "у", "к", "е", "н", "г", "ш", "щ", "з" ],
                                    [ "ф", "ы", "в", "а", "п", "р", "о", "л", "джэ"  ],
                                    [ "я", "ч", "с", "м", "и", "т", "ь", "б", "ю"  ],
                                    [ { "vkey": { "$zebra.ui.vk.VKeyOption" : [ "Lang", [ "latin" ]] }, "size": "ps" },  "shift", "space", "enter" ]
                                ]
                    },
        "activeGroup" : "latin"
    }
}